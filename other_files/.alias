mem_pid ()
{
	top -b -n 1 | gp "$1" | awk '{printf "%s G\t%s\n", $10/100*8, $12}'
}

by_size()
{
    du -sm * | sort -nr | head -10 | awk '{printf "%.2fG\t", $1/1024; $1=""; print $0}'
}

gcc_w (){
    output_file=$(echo $1 | sed -nr "s/(.*)(\.c)/\1/p")
    gcc -Wall -Wextra -Wformat-security -Wswitch-default $1 -o $output_file
}

java-doc () {
  # openjdk-doc
