!! URXVT Settings
/* URxvt.intensityStyles:	false */
/* URxvt.depth:		32 */
URxvt.font:         xft:FiraCode Nerd Font:style=Regular:pixelsize=16
URxvt.boldFont:     xft:FiraCode Nerd Font:style=Bold:pixelsize=16
URxvt.italicFont:   xft:FiraCode Nerd Font:style=Light:pixelsize=16
URxvt.scrollBar:	false
URxvt.cursorColor:	white
URxvt.perl-ext-common:	default,resize-font,matcher,keyboard-select

!! Copy and Paste
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.iso14755: false
URxvt.iso14755_52: false

!! Matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5

!! Resize
URxvt.keysym.Control-j: resize-font:smaller
URxvt.keysym.Control-k: resize-font:bigger
URxvt.keysym.Control-equal: resize-font:reset

!! Keyboard Select
URxvt.keysym.M-Escape: perl:keyboard-select:activate

!! Rofi Settings
rofi.color-enabled:	true
rofi.color-window:	#0047b3, #ffffff, #ffffff
!!                  unselected, unselected font color, middle, select, selected font color
rofi.color-normal:	#0047b3, #cccccc, #0047b3, #0066ff, #ffffff
rofi.color-active:	#002b37, #008ed4, #003643, #008ed4, #66c6ff
rofi.color-urgent:	#002b37, #da4281, #003643, #008ed4, #890661

rofi.fake-transparency:	true
rofi.lines:		3
rofi.bw:		0
rofi.opacity:		"10"
rofi.hide-scrollbar:	true
rofi.width:		30

!! XClock
XClock*strftime: 		%a %d %b %H:%M
XClock*padding:     	3
XClock*update:			1
XClock*chime:			true
XClock*render: 	    	true
XClock*digial:	    	false
XClock*foreground:	    #5F8787
XClock*majorColor:  	#c1c1c1
XClock*minorColor:      #5F8787
XClock*hourColor:   	#aaaaaa
XClock*minuteColor: 	#aaaaaa
XClock*secondColor:     #aaaaaa

!! Xload
XLoad*foreground: 			#c2c2b0
XLoad*label: 				i5(8) 4.2GHz
XLoad*update: 				5
XLoad*highlight: 			#98d1ce
XLoad*jumpscroll: 			1
XLoad*font: 				-artwiz-snap-normal-r-normal--10-100-75-75-p-90-iso10646-1